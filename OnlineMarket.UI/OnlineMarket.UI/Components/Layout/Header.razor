@using Microsoft.AspNetCore.Components.Authorization
@using Domain.Users
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand logo" href="#">OnlineMarket</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <AuthorizeView>
                <NotAuthorized>
                    <ul class="navbar-nav ms-auto mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="login">Login</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="register">Register</NavLink>
                        </li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
            <AuthorizeView Roles=@Roles.RegularUser>
                    <ul class="navbar-nav ms-auto mb-lg-0">
                        <li class="nav-item me-5">
                            <button class="btn btn-primary">Add Announcement</button>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="user/messages">Messages</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="user/announcements">My announcements</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="logout">Logout</NavLink>
                        </li>
                    </ul>
            </AuthorizeView>
            <AuthorizeView Roles=@Roles.Moderator>
                <Authorized>
                    <ul class="navbar-nav ms-auto mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="moderator/verify">Verify Announcements</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="moderator/categories">Manage Categories</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link active" href="logout">Logout</NavLink>
                        </li>
                    </ul>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

